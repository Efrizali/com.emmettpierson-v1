@model EmmettPierson.com.Models.Balance

<head>
    <title>Balance</title>
</head>

<h1>Balance</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Account.FirstName) @Html.DisplayFor(modelItem => modelItem.Account.LastName)
        </dd>
        <dt class="col-sm-2">
            Total: $
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Total)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Transaction Date
                </th>
                <th>
                    Is new Balance
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category
                </th>
            </tr>
        </thead>


        @foreach (var item in Model.Transactions) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNewBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
            </tr>

        }
                
                
            
    </table>
    
    
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
